<h1>Portal</h1>

<%= form_tag portals_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a portal"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<h3><%= @portal.name %></h3>

<h5><%= @portal.description %></h5>

<h6><%= @portal.price %></h6>

    <div id="map"
    style="width: 400px; height: 300px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

<br>

<%= link_to 'View all portals', portals_path, class: "btn btn-primary" %>
<%= link_to 'Create booking', new_portal_booking_path(@portal), class: "btn btn-success" %>
