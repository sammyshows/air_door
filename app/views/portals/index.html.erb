<h1>Portals</h1>

<%= form_tag portals_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a Portal by location"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<div class="card-columns">
  <% @portals.each do |portal| %>
    <% unless portal.user == current_user %>
      <% if portal.cover_photo.attached? %>
  <div class="card" >
        <%= link_to portal_path(portal) do %>
          <%= cl_image_tag(portal.cover_photo.key,
                class: "card-images", height: 300, fit: :clip) %>
          <% end %>
        <% end %>
      <li><%= link_to portal.name, portal_path(portal) %></li>
    <div id="map"
     style="width: 300px; height: 300px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
      <h5><%= portal.name %></h5>
  </div>
      <% end %>
    <% end %>
</div>
